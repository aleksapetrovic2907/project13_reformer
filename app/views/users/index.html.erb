<table border="1" style="width: 50%">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Password</th>
        <th></th>
    </tr>
    
    <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><%= link_to "See this user", user_path(user) %></td>
        </tr>
    <% end %>
</table>
<%= link_to "Create a new user", new_user_path %>